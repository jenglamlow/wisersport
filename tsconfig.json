{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["es2015", "es2016", "es2018.promise", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
